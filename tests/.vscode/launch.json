{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug (gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			// This MUST match the NAME in your Makefile
			"program": "${workspaceFolder}/run_tests",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			// This tells the debugger to run your build task first
			"preLaunchTask": "make build",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}